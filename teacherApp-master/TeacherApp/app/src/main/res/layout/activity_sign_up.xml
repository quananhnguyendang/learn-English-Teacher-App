<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parentSignUp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SignUpActivity">
    <TextView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Sign Up"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="8"
        android:gravity="center"
        android:layout_height="0dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPhoneNumberSignUp"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:inputType="phone"
            android:hint="PhoneNumber Sign Up"
            android:textColor="#01b0a9"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/edtUsernameSignUp"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:hint="Name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPasswordSignUp"
            android:layout_marginTop="5dp"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:hint="Password"
            android:inputType="textPassword"
            />
        <EditText
            android:id = "@+id/edtEmailSignUp"
            android:hint = "Enter Email id"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUpSignIn"
            android:textColor="@color/fbutton_color_asbestos"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:text="Sign up"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>